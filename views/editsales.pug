doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title MWF - Edit Sale
    link(rel='stylesheet' href='/css/edit-stock.css')
  body
    .navbar
      a(href='/logout') LOGOUT

    .container
      h2 üìù EDIT SALES

      .form-container
        form(action=`/editSales/${sale._id}`, method='post')
          .form-group
            label(for='customerName') Customer Name
            input#customerName(type='text' required name='customerName' value=sale.customerName placeholder='Customer Name')
          
          .form-group
            label(for='productType') Product Type
            select#productType(required name='productType')
              option(value='') Select Type
              option(value='wood' selected=sale.productType === 'wood') Wood
              option(value='furniture' selected=sale.productType === 'furniture') Furniture
          
          .form-group
            label(for='productName') Product Name
            select#productName(required name='productName')
              option(value='') Select Product
              option(value='timber' selected=sale.productName === 'timber') Timber
              option(value='poles' selected=sale.productName === 'poles') Poles
              option(value='hardwood' selected=sale.productName === 'hardwood') Hard Wood
              option(value='softwood' selected=sale.productName === 'softwood') Soft Wood
              option(value='beds' selected=sale.productName === 'beds') Beds
              option(value='sofa' selected=sale.productName === 'sofa') Sofa
              option(value='dining tables' selected=sale.productName === 'dining tables') Dining Tables
              option(value='cupboards' selected=sale.productName === 'cupboards') Cupboards
              option(value='drawers' selected=sale.productName === 'drawers') Drawers
              option(value='home furniture' selected=sale.productName === 'home furniture') Home Furniture
              option(value='office furniture' selected=sale.productName === 'office furniture') Office Furniture
          
          .form-group
            label(for='quantitySold') Quantity Sold
            input#quantitySold(type='number' required name='quantitySold' value=sale.quantitySold placeholder='Quantity')
          
          .form-group
            label(for='unitPrice') Unit Price (UGX)
            input#unitPrice(type='number' step='1000' required name='unitPrice' value=sale.unitPrice placeholder='Unit Price')
          
          .form-group
            label(for='date') Date
            input#date(type='date' required name='date' value=sale.date)
          
          .form-group
            label(for='paymentType') Payment Type
            select#paymentType(required name='paymentType')
              option(value='') Select Payment
              option(value='cash' selected=sale.paymentType === 'cash') Cash
              option(value='cheque' selected=sale.paymentType === 'cheque') Cheque
              option(value='bank_overdraft' selected=sale.paymentType === 'bank_overdraft') Bank Overdraft
          
          .form-group
            label
              input(type='checkbox' name='checkBox' checked=sale.checkBox === 'on')
              span  Company provides transport (+5%)
          
          .form-actions
            button.btn.btn-primary(type='submit') ‚úÖ UPDATE SALE
            a.btn.btn-secondary(href='/salesTable') ‚ùå CANCEL
doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sales Table
    link(rel='stylesheet' href='/css/style.css')
    link(rel='stylesheet' href='/attendant.css')
    link(rel='stylesheet' href='/css/style.css')
    link(rel='stylesheet' href='/css/receipt.css') 
  body
    .navbar
      a(href='/attendantstock') RECORD STOCK
      a(href='/recordingSales') RECORD SALES
      a(href='/loading') LOADING ITEMS
      a(href='/offLoading') OFFLOADING ITEMS
      a(href='/receipt') RECEIPT
      a(href='/attendant') BACK
      a(href='/login') LOGOUT
    table#salesTable
      thead
        tr
          th Customer Name
          th Product
          th Type
          th Quantity
          th Unit Price
          th Total
          th Date
          th Payment
          th Agent
          th Transport
          th Actions
          
      tbody#salesTableBody
        if sales && sales.length
          each sale in sales
            tr 
              td #{sale.customerName}
              td #{sale.productName}
              td #{sale.productType}
              td #{sale.quantitySold}
              td #{sale.unitPrice}
              td #{sale.quantitySold * sale.unitPrice}
              td #{sale.date}
              td #{sale.paymentType}
              td #{sale.salesAgent ? sale.salesAgent.email : 'No Agent'}
              td #{Math.round(0.05 * sale.quantitySold * sale.unitPrice)}
              td 
                  .action-buttons
                    a.btn.btn-edit(href=`/editSales/${sale._id}`) 
                      | ‚úèÔ∏è EDIT
                    form(method='post' action=`/deleteSales/${sale._id}` style='display: inline;')
                      button.btn.btn-delete(type='submit' onclick="return confirm('Are you sure you want to delete this item?')") 
                        | üóëÔ∏è DELETE
                    a.btn.btn-receipt(href=`/getReceipt/${sale._id}` target="_blank") üßæ RECEIPT
        else
          tr
            td(colspan="11" style="text-align: center; color: #666;") No sales records found
    
    